            <nav class="flex flex-1 flex-col">
                <ul role="list" class="flex flex-1 flex-col gap-y-7">
                    <li>
                        <ul>
                            {% for menu_item in menu %}
                                {% if menu_item.children is defined %}
                                    <li>
                                        <div data-controller="menu" data-menu-opened-value="{{ menu_item.opened ? 'true' : 'false' }}" data-menu-opened-class="rotate-90" data-menu-closed-class="rotate-0">
                                            <button type="button" class="flex items-center w-full pl-6 py-1 text-sm text-gray-700 transition duration-75 hover:bg-gray-200 dark:text-gray-200 dark:hover:bg-gray-700" aria-controls="sub-menu-1" aria-expanded="true" data-action="menu#toggle">
                                                <svg class="w-2 h-2 me-1 fill-gray-400" data-menu-target="svg" viewBox="0 0 16 16">
                                                    <path d="M3 3.732a1.5 1.5 0 0 1 2.305-1.265l6.706 4.267a1.5 1.5 0 0 1 0 2.531l-6.706 4.268A1.5 1.5 0 0 1 3 12.267V3.732Z" />
