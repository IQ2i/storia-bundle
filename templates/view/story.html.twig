                                        <a href="{{ menu_item.url }}" class="w-full text-sm text-gray-700 transition duration-75 dark:text-white {% if menu_item.active %}text-white{% endif %}">
                                            {{ menu_item.label }}
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
            </nav>
